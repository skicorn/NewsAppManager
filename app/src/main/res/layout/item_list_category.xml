<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <EditText
        android:id="@+id/admin_category_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="YOUR CATEGORY"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@null"
        android:textSize="25sp"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:id="@+id/admin_category_save"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:background="@null"
        android:enabled="false"
        android:visibility="invisible"
        android:src="@drawable/doneicon" />
    <ImageButton
        android:id="@+id/admin_category_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/edittext_border"
        android:backgroundTint="@color/cam"
        android:src="@drawable/deleteicoon"/>
</LinearLayout>